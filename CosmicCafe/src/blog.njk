---
layout: layouts/base.njk
title: Blog
pagination:
  data: collections.posts
  size: 5
  alias: posts
permalink: /blog/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}
---

<h1>Blog</h1>

<ul class="post-list">
{% for post in posts %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
    <small> — {{ post.date | date("MMM d, yyyy") }}</small>
    {% if post.data.description %}<div class="excerpt">{{ post.data.description }}</div>{% endif %}
  </li>
{% endfor %}
</ul>

{% if pagination.pages.length > 1 %}
<nav class="pagination">
  {% if pagination.href.previous %}
    <a class="prev" href="{{ pagination.href.previous }}">← Newer</a>
  {% endif %}
  <span>Page {{ pagination.pageNumber + 1 }} of {{ pagination.pages.length }}</span>
  {% if pagination.href.next %}
    <a class="next" href="{{ pagination.href.next }}">Older →</a>
  {% endif %}
</nav>
{% endif %}



